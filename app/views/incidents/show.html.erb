<div class="row">
  <div class="col-md-10 col-md-offset-1">

<h1><%= @incident.title %></h1>
<hr>

<% if @incident.events.count > 0 %>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Status</th>
    <th>Date</th>    
      <th>Description</th>
  </tr>
  </thead>
 
 <%  @events.each do |event| %>
  
  <tbody> 
    <tr>
    <% if  event.status == "open" %>
        <td><p class="red-circle"></p></td>
    <% elsif  event.status == "closed" %>
        <td><p class="green-circle"></p></td>
    <% end %>
      <% if event.created_at %>
      <td><%= event.created_at.strftime("%d/%m/%Y  -  %H:%M") %></td>
      <% end %>
      <td><%= event.description %></td>
    </tr>
  </tbody>
  <% end %>  
</table>
<% end%>

<a href="#" data-toggle="modal" data-target="#myModal" id="reset_modal" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>Add an event</a>

<!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <%= render 'form_for_events' %>
      </div>
    </div>
  </div>
  </div>
</div>
